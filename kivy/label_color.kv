# 可以調整所有 Button 的樣式
<Button>
	font_size: 32
	background_normal: ''
	background_color: (0,0,1,1)

# 可以調整整個 TextInput 的樣式
<TextInput>
	background_color: (150/255, 150/255, 150/255,1)

<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: 10
		spacing: 10

		Label:
			text: "Name"
			font_size: 45
			background_color: (182/255, 66/255, 245/255, 1)
			canvas.before:
				Color:
					rgba: self.background_color
				Rectangle:
					size: self.size
					pos: self.pos

			# Text Properties
			color: (0,1,0,1)
			bold: True
			outline_color: (0,0,0)
			outline_width: 5
			italic: True

		TextInput:
			multiline: False


		Button:
			text: "Clear"
			# override 原本的 background_color
			background_color:(1,0,0,1)


