<MyLayout>
	# canvas.before 會 override window 那邊的設定
	canvas.before:
		Color: 
			rgba: (0,0,1,1)
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		padding: 50
		spacing: 20

		Button:
			text: "Hello World!"

		Button:
			text: "Goodbye World!"